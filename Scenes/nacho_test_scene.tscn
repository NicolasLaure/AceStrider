script/source = "extends CharacterBody2D

const SPEED = 50.0
var dir:Vector2
var isMovingRight:bool
var timer:float
var movingCooldown:float = 0

func _physics_process(delta):
	if (timer >= movingCooldown):
		movingCooldown = randf_range(10, 40)
		timer = 0
		if (isMovingRight):
			isMovingRight = false
		else:
			isMovingRight = true
	else: 
		timer += delta
	
	if (isMovingRight):
		dir.x = 1
	else: 
		dir.x = -1

	translate(dir * SPEED * delta)
	pass

"

