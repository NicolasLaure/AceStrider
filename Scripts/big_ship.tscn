script/source = "extends CharacterBody2D

const SPEED = 50.0
var dir:Vector2
var isMovingRight:bool
var timer:float
var movingCooldown:float = 0
var shootTimer:float
var shootCooldown:float = 1
const bulletPath = preload(\"res://Scripts/Bullet.tscn\")
var currentPlayerPosition

func _physics_process(delta):	
	if (timer >= movingCooldown):
		movingCooldown = randf_range(10, 40)
		timer = 0
		if (isMovingRight):
			isMovingRight = false
		else:
			isMovingRight = true
	else: 
		timer += delta
	
	if (isMovingRight):
		dir.x = 1
	else: 
		dir.x = -1

	translate(dir * SPEED * delta)
	
	currentPlayerPosition = get_tree().root.get_node(\"LevelScene/Player\").position
	
	if (shootTimer >= shootCooldown):
		shootTimer = 0
		Shoot();
	else:
		shootTimer += delta
pass
	
func Shoot():
	var bullet = bulletPath.instantiate()
	
	get_parent().add_child(bullet)
	bullet.position = $Marker2D.global_position
	
	velocity.y -= dir.y
	velocity.x -= dir.x 

	var bulletDir:Vector2 = currentPlayerPosition - position
	bullet.rotation = 360 - (rad_to_deg(atan2(bulletDir.x, bulletDir.y))) 
pass

